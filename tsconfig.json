{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6"],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],
      "@api/*": ["src/api/*"],
      "@type/*": ["src/type/*"],
      "@util/*": ["src/util/*"],
      "@hooks/*": ["src/hooks/*"],
      "@context/*": ["src/context/*"],
      "@screens/*": ["src/screens/*"],
      "@components/*": ["src/components/*"],
      "@constant/*": ["src/constant/*"],
      "@components": ["src/components/index.ts"],
      "@constant": ["src/constant/index.ts"],
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
